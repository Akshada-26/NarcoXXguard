<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addiction Reduction Activities"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/startActivity1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mindfulness Meditation Activity"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/startActivity3Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yoga Activity"
        android:layout_below="@id/startActivity1Button"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/startActivity4Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deep Breathing Activity"
        android:layout_below="@id/startActivity3Button"
        android:layout_marginTop="10dp"/>


</RelativeLayout>